{
  "branches": [
    "semantic"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          { "type": "patch", "release": "patch" },
          { "type": "minor", "release": "minor" },
          { "type": "major", "release": "major" },
          { "type": "breaking change", "release": "major" },
          { "type": "BREAKING CHANGE", "release": "major" }
        ],
        "parserOpts": {
          "headerPattern": "^(?<type>\\w+(?: \\w+)*)(?:\\((?<scope>.*)\\))?!?: (?<subject>.*)$"
        }
      }
    ],
    "@semantic-release/git"
  ]
}
